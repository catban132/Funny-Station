<genetics:GenePuzzle xmlns="https://spacestation14.io"
        xmlns:controls="using:Content.Client.UserInterface.Controls"
        xmlns:genetics="using:Content.Trauma.Client.Genetics.UI">
    <BoxContainer Orientation="Vertical">
        <controls:NanoHeading Text="{Loc 'genetics-console-genome-sequencer'}" HorizontalExpand="True"/>
        <GridContainer Name="BaseButtons" Columns="16"/> <!-- Populated at runtime -->
        <Label Name="Tip" Text="{Loc 'genetics-console-sequencer-tip'}"
        	Visible="False"/> <!-- TODO: make visible when it's actually implemented lol -->
        <BoxContainer Name="SequenceButtonContainer" Orientation="Horizontal" Align="Center">
            <controls:StripeBack>
            	<BoxContainer Orientation="Horizontal">
	                <Button Name="SequenceButton" Text="{Loc 'genetics-console-begin-sequencing'}" StyleClasses="negative" Margin="4"/>
    	            <Button Name="ResetSequenceButton" Text="{Loc 'genetics-console-reset-sequence'}" StyleClasses="negative" Margin="4"/>
	            </BoxContainer>
            </controls:StripeBack>
        </BoxContainer>
    </BoxContainer>
</genetics:GenePuzzle>
